{
	"manifest_version": 2,

	"name": "QSharePage",

	"version": "1.0.0",

	"description": "A chromium extension for sharing url and titles.",

	"icons":
	{
		"16": "static/icon.png",
		"48": "static/icon.png",
		"128": "static/icon.png"
	},

	"background":
	{

		"page": "background.html"

	},

	"browser_action": 
	{
		"default_icon": "img/icon.png",
		"default_title": "分享网址",
		"default_popup": "popup.html"
	},

	"permissions":
	[
		"contextMenus",
		"tabs"
	],

	"homepage_url": "https://github.com/REZ2O/QSharePage",

	"options_page": "options.html",

	"options_ui":
	{
		"page": "options.html",

		"chrome_style": true
	},

    "default_locale": "zh_CN"
    
}